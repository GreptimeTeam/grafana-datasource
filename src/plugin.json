{
  "type": "datasource",
  "name": "GreptimeDB",
  "id": "greptime-greptimedb-datasource",
  "category": "tsdb",
  "routes": [
    {
      "method": "POST",
      "path": "v1/prometheus/api/v1/query",
      "reqRole": "Viewer"
    },
    {
      "method": "POST",
      "path": "v1/prometheus/api/v1/query_range",
      "reqRole": "Viewer"
    },
    {
      "method": "POST",
      "path": "v1/prometheus/api/v1/series",
      "reqRole": "Viewer"
    },
    {
      "method": "POST",
      "path": "v1/prometheus/api/v1/labels",
      "reqRole": "Viewer"
    },
    {
      "method": "POST",
      "path": "v1/prometheus/api/v1/query_exemplars",
      "reqRole": "Viewer"
    },
    {
      "method": "GET",
      "path": "/rules",
      "reqRole": "Viewer"
    },
    {
      "method": "POST",
      "path": "/rules",
      "reqRole": "Editor"
    },
    {
      "method": "DELETE",
      "path": "/rules",
      "reqRole": "Editor"
    },
    {
      "method": "DELETE",
      "path": "/config/v1/rules",
      "reqRole": "Editor"
    },
    {
      "method": "POST",
      "path": "/config/v1/rules",
      "reqRole": "Editor"
    }
  ],
  "includes": [
    {
      "type": "dashboard",
      "name": "Prometheus Stats",
      "path": "dashboards/prometheus_stats.json"
    },
    {
      "type": "dashboard",
      "name": "Prometheus 2.0 Stats",
      "path": "dashboards/prometheus_2_stats.json"
    },
    {
      "type": "dashboard",
      "name": "Grafana Stats",
      "path": "dashboards/grafana_stats.json"
    }
  ],
  "metrics": false,
  "alerting": false,
  "annotations": false,
  "backend": true,
  "queryOptions": {
    "minInterval": true
  },
  "executable": "gpx_greptime_db",
  "info": {
    "description": "Open source time series database & alerting",
    "author": {
      "name": "GreptimeDB",
      "url": "https://greptime.com"
    },
    "logos": {
      "small": "img/prometheus_logo.svg",
      "large": "img/prometheus_logo.svg"
    },
    "links": [
      {
        "name": "Learn more",
        "url": "https://docs.greptime.com/"
      }
    ],
    "version": "%VERSION%",
    "updated": "%TODAY%"
  }
}
