{
  "type": "datasource",
  "name": "GreptimeDB",
  "id": "greptimedb-datasource",
  "metrics": true,
  "backend": true,
  "category": "tsdb",
  "routes": [
    {
      "method": "POST",
      "path": "v1/prometheus/api/v1/query",
      "reqRole": "Viewer"
    },
    {
      "method": "POST",
      "path": "v1/prometheus/api/v1/query_range",
      "reqRole": "Viewer"
    },
    {
      "method": "POST",
      "path": "v1/prometheus/api/v1/series",
      "reqRole": "Viewer"
    },
    {
      "method": "POST",
      "path": "v1/prometheus/api/v1/labels",
      "reqRole": "Viewer"
    },
    {
      "method": "POST",
      "path": "v1/prometheus/api/v1/query_exemplars",
      "reqRole": "Viewer"
    },
    {
      "method": "GET",
      "path": "/rules",
      "reqRole": "Viewer"
    },
    {
      "method": "POST",
      "path": "/rules",
      "reqRole": "Editor"
    },
    {
      "method": "DELETE",
      "path": "/rules",
      "reqRole": "Editor"
    },
    {
      "method": "DELETE",
      "path": "/config/v1/rules",
      "reqRole": "Editor"
    },
    {
      "method": "POST",
      "path": "/config/v1/rules",
      "reqRole": "Editor"
    }
  ],
  "queryOptions": {
    "minInterval": true
  },
  "executable": "gpx_greptime_db",
  "info": {
    "description": "Open source time series database",
    "author": {
      "name": "GreptimeDB",
      "url": "https://greptime.com"
    },
    "logos": {
      "small": "img/greptimedb_logo.svg",
      "large": "img/greptimedb_logo.svg"
    },
    "links": [
      {
        "name": "Learn more",
        "url": "https://docs.greptime.com/"
      }
    ],
    "screenshort": [{"name": "Node Exporter", "path": "img/image.png"}],
    "version": "%VERSION%",
    "updated": "%TODAY%"
  },
  "dependencies": {
    "grafanaDependency": ">=10.3.3",
    "plugins": []
  }
}
